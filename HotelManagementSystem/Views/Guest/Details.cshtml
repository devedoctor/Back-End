@model HotelManagementSystem.Models.Guest

@{
    ViewData["Title"] = "Guest Details";
}

<div class="container-fluid guest-banner mb-4">
    <div class="container py-5">
        <h1 class="display-4 text-white">Guest Details</h1>
    </div>
</div>

<div class="container">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>@Model.FullName</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">First Name:</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4">Last Name:</dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">ID Number:</dt>
                        <dd class="col-sm-8">@Model.IdentificationNumber</dd>

                        <dt class="col-sm-4">Total Bookings:</dt>
                        <dd class="col-sm-8">@(Model.Bookings?.Count ?? 0)</dd>
                    </dl>
                </div>
            </div>

            @if (Model.Bookings?.Count > 0)
            {
                <hr />
                <h5 class="mb-3">Booking History</h5>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th>Room</th>
                                <th>Check-In</th>
                                <th>Check-Out</th>
                                <th>Status</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model.Bookings)
                            {
                                <tr>
                                    <td>@booking.Room.RoomNumber (@booking.Room.RoomType)</td>
                                    <td>@booking.CheckInDate.ToShortDateString()</td>
                                    <td>@booking.CheckOutDate.ToShortDateString()</td>
                                    <td>
                                        <span class="badge @(booking.BookingStatus == "Confirmed" ? "badge-success" : "badge-primary")">
                                            @booking.BookingStatus
                                        </span>
                                    </td>
                                    <td>$@booking.TotalAmount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.GuestId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
