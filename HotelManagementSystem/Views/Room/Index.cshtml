@model IEnumerable<HotelManagementSystem.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<div class="container-fluid room-banner mb-4">
    <div class="container py-5">
        <h1 class="display-4 text-white">Our Rooms</h1>
    </div>
</div>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Room List</h2>
        @if (Context.Session.GetString("Role") == "Admin")
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Room
            </a>
        }
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Room Number</th>
                    <th>Room Type</th>
                    <th>Price/Night</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.RoomType)</td>
                        <td>@Html.DisplayFor(modelItem => item.PricePerNight)</td>
                        <td>
                            @if (item.IsAvailable)
                            {
                                <span class="badge badge-success">Available</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Occupied</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Details
                            </a>
                            @if (Context.Session.GetString("Role") == "Admin")
                            {
                                <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>