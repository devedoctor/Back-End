@model HotelManagementSystem.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="container-fluid register-banner">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card register-card shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h3><i class="fas fa-user-plus"></i> Create Account</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Register">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Username" class="control-label"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input asp-for="Username" class="form-control" placeholder="Enter username" />
                                </div>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    </div>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="ConfirmPassword" class="control-label">Confirm Password</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    </div>
                                    <input id="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" />
                                </div>
                                <span id="confirmPasswordValidation" class="text-danger"></span>
                            </div>

                            @if (Context.Session.GetString("Role") == "Admin")
                            {
                                <div class="form-group">
                                    <label asp-for="Role" class="control-label"></label>
                                    <select asp-for="Role" class="form-control">
                                        <option value="Staff">Staff</option>
                                        <option value="Admin">Admin</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            }
                            else
                            {
                                <input type="hidden" asp-for="Role" value="Staff" />
                            }

                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary btn-block">
                                    <i class="fas fa-user-plus"></i> Register
                                </button>
                            </div>

                            <div class="text-center mt-3">
                                <p>Already have an account? <a asp-action="Login">Login here</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Password confirmation validation
            $('#ConfirmPassword').on('keyup', function() {
                if ($('#Password').val() !== $('#ConfirmPassword').val()) {
                    $('#confirmPasswordValidation').text('Passwords do not match');
                } else {
                    $('#confirmPasswordValidation').text('');
                }
            });

            // Form submission validation
            $('form').submit(function() {
                if ($('#Password').val() !== $('#ConfirmPassword').val()) {
                    $('#confirmPasswordValidation').text('Passwords must match');
                    return false;
                }
                return true;
            });
        });
    </script>
}