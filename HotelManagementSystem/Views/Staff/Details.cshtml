@model HotelManagementSystem.Models.Staff

@{
    ViewData["Title"] = "Staff Details";
}

<div class="container-fluid staff-banner mb-4">
    <div class="container py-5">
        <h1 class="display-4 text-white">Staff Details</h1>
    </div>
</div>

<div class="container">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>@Model.Name</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Position:</dt>
                        <dd class="col-sm-8">@Model.Position</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Hire Date:</dt>
                        <dd class="col-sm-8">@Model.HireDate.ToShortDateString()</dd>

                        <dt class="col-sm-4">Salary:</dt>
                        <dd class="col-sm-8">@Model.Salary.ToString("C")</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4">
                @if (Context.Session.GetString("Role") == "Admin")
                {
                    <a asp-action="Edit" asp-route-id="@Model.StaffId" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                }
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>