@model IEnumerable<HotelManagementSystem.Models.Staff>

@{
    ViewData["Title"] = "Staff Management";
}

<div class="container-fluid staff-banner mb-4">
    <div class="container py-5">
        <h1 class="display-4 text-white">Staff Management</h1>
    </div>
</div>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Staff Members</h2>
        @if (Context.Session.GetString("Role") == "Admin")
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Add Staff
            </a>
        }
    </div>

    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="m-0">All Staff</h4>
                </div>
                <div class="col-md-6">
                    <form asp-action="Index" method="get" class="form-inline float-right">
                        <div class="input-group">
                            <input type="text" name="searchString" class="form-control" placeholder="Search staff..." value="@ViewData["CurrentFilter"]" />
                            <select name="positionFilter" class="form-control ml-2" onchange="this.form.submit()">
                                <option value="">All Positions</option>
                                @foreach (var position in ViewBag.Positions)
                                {
                                    <option value="@position">@position</option>
                                }
                            </select>
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-outline-light">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Hire Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Position</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.HireDate.ToShortDateString()</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.StaffId" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    @if (Context.Session.GetString("Role") == "Admin")
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.StaffId" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.StaffId" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>